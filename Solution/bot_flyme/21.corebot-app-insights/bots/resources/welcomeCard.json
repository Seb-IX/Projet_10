{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Welcome to Fly Me Bot!",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "text": "Just call me to start a conversation with me.",
      "wrap": true
    }
  ],
  "actions": [
      {
        "type": "Action.ShowCard",
        "title": "Help",
        "card": {
            "type": "AdaptiveCard",
            "body": [
                {
                    "type": "TextBlock",
                    "text": "My goal is to help to book a flight : call me and give me a trip(dates and city to origin and destination) as well as the budget and seat business.",
                    "wrap": true
                }
            ]
        }
    }
  ]
}